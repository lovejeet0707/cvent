 <script>
 function checkValidation(){
        var isError = false;
        //debugger;
        
        if (!validatePage()) {
            isError = true;
            return false;
        } else {
            saveForm();
        }
    }
    
    function validatePage(){
        var status = false;
        var errorfound = 'FALSE' ;
        if($('.phnNum').val() == ''){
            errorfound = 'TRUE';
            $("#phoneSpan").removeClass("hide");
            $('span.errorMessagePhn').text('Please fill phone number.');
            status = true;
        }else {
            $("#phoneSpan").addClass("hide");
            
        }
        
        if($('.countryCode').val() == ''){
            errorfound = 'TRUE';
            $("#countrySpan").removeClass("hide");
            $('span.errorMessageCountry').text('Please fill country code.');
            status = true;
        } else { 
            $("#countrySpan").addClass("hide");
        }
        return !status;    
    }
    </script>
