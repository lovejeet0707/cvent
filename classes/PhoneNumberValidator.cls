public class PhoneNumberValidator{

    static Map<String,Country_Phone_Codes__c> ISDCodesMap = Country_Phone_Codes__c.getAll();
    static string funcOff = Label.PhoneNumberValidator;
    static String oldHisCountryCode;
    //Take country code and phone, returns the updated phone number with ISD Code
    public static string returnFormattedPhoneNumber(string phone,string countryCode,string oldCountryCode,Id recordId){
        
        //Turn off the Ring DNA functionality by returning same number entered. 
        if(Label.PhoneNumberValidator!='True'){
            return phone;
        }
        
        else{
            System.debug('oldCountryCode****'+oldCountryCode);
            System.debug('recordId****'+recordId);
            if(recordId!=null)
            {
                if(String.ValueOf(recordId).startsWith('003')){
                    system.debug('----query'+ [SELECT OldValue FROM ContactHistory WHERE Id = : recordId AND Field = 'MailingCountryCode']);
                    system.debug('----query'+ [SELECT OldValue FROM ContactHistory WHERE Id = : recordId]);
                    For(ContactHistory contactHisRecord: [SELECT OldValue FROM ContactHistory WHERE Id = : recordId AND Field = 'MailingCountryCode' 
                    ORDER BY CreatedDate DESC NULLS FIRST LIMIT 1])
                    {
                        oldHisCountryCode = String.ValueOf(contactHisRecord.OldValue);
                    }
                }
                else if(String.ValueOf(recordId).startsWith('001')){
                    For(AccountHistory accountHisRecord: [SELECT OldValue FROM AccountHistory WHERE Id = : recordId AND Field = 'CountryCode' 
                    ORDER BY CreatedDate DESC NULLS FIRST LIMIT 1])
                    {
                        oldHisCountryCode = String.ValueOf(accountHisRecord.OldValue);
                    }
                }
                else if(String.ValueOf(recordId).startsWith('00T')){
                    For(LeadHistory leadHisRecord: [SELECT OldValue FROM LeadHistory WHERE Id = : recordId AND Field = 'CountryCode' 
                    ORDER BY CreatedDate DESC NULLS FIRST LIMIT 1])
                    {
                        oldHisCountryCode = String.ValueOf(leadHisRecord.OldValue);
                    }
                }
            }
            
            string formattedPhone='';
            
            //Country code should exist in custom setting. 
            if(ISDCodesMap.containsKey(countryCode)){
                
                //Remove special chars, spaces etc. 
                formattedPhone = phone.replaceAll('\\D', '');
    
                System.debug('formattedPhone****'+formattedPhone);
                //Get ISD Code from custom setting. 
                string ISDCode = ISDCodesMap.get(countryCode).ISD_Code__c;
                System.debug('ISDCode****'+ISDCode);
                string historyISDCode;
                if(oldHisCountryCode!='' && ISDCodesMap.containsKey(oldHisCountryCode))
                    historyISDCode = ISDCodesMap.get(oldHisCountryCode).ISD_Code__c;
                System.debug('historyISDCode****'+historyISDCode);
                string oldISDCode;
                if(oldCountryCode!='' && ISDCodesMap.containsKey(oldCountryCode))
                    oldISDCode = ISDCodesMap.get(oldCountryCode).ISD_Code__c;
                
                
                System.debug('oldISDCode****'+oldISDCode );
                //If phone starts with ISD Code. Remove the same. 
                if(formattedPhone.startsWith(ISDCode)){
                    System.debug('ISDCode**** inside');
                    formattedPhone = formattedPhone.removeStart(ISDCode);
                }
               
                else if(oldISDCode !=null && formattedPhone.startsWith(oldISDCode)){
                    System.debug('ISDCode**** inside');
                    formattedPhone = formattedPhone.removeStart(oldISDCode);
                }
                
                else if(historyISDCode!=null && formattedPhone.startsWith(historyISDCode)){
                    System.debug('ISDCode**** inside');
                    formattedPhone = formattedPhone.removeStart(historyISDCode);
                }
                
                System.debug('formattedPhone**** formattedPhone'+formattedPhone);
                //If phone starts with 0. Remove the same. The country Italy is exceptional
                /*if(formattedPhone.startsWith('0') && countryCode!='IT'){
                    System.debug('formattedPhone**** formattedPhoneinside');
                    formattedPhone = formattedPhone.removeStart('0');
                }*/
                //System.debug('formattedPhone**** formattedPhoneoutside'+formattedPhone);
                //Add + sign with ISO Code in the start
                formattedPhone= '+' + ISDCode + formattedPhone;
                System.debug('formattedPhone**** formattedPhoneoutsideFinal'+formattedPhone);
            }
            
            return formattedPhone;
        }
        
    }
    
